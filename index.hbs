{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The main content area on the homepage }}
<main class="content" role="main">

  <section class="row">
    <div class="medium-12 columns">
      <h2 class="blog-description">{{@blog.description}}</h2>
    </div>
  </section>

  <!-- Main Page Content and Sidebar -->
  <div class="row">

    <!-- Sidebar -->
    <aside class="large-3 panel columns">
    </aside>
    <!-- End Sidebar -->

    <!-- Main Page Content -->
    <div class="large-9 columns" role="content">
      {{!-- <div class="panel"> --}}

      {{! Each post will be output using this markup }}
      {{#foreach posts}}

        <article class="row {{post_class}}">
          <div class="large-12 columns">
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
          </div>
          <div class="large-4 columns post-meta-date" data-equalizer>
            <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
          </div>
          <div class="large-8 columns post-excerpt">
            <p>{{excerpt}}&hellip;</p>
            <p class="text-right"><a href="{{url}}" class="next">Lire la suite</a></p>
          </div>
        </article>

      {{/foreach}}

    </div>
    <!-- End Main Page Content -->
  </div>
  <!-- End Main Page Content and Sidebar -->

  {{!! After all the posts, we have the previous/next pagination links }}
  {{pagination}}

</main>







